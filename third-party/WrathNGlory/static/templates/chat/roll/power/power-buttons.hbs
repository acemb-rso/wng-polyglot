<div class="wrapper potency">
        {{#if result.isSuccess}}
        {{#if result.potency.options}}
        <h3>Potency</h3>
        <div class="potency-allocation">
                <h4>Spent: {{result.potency.spent}}/{{result.potency.available}}  <a data-action="resetPotency"><i class="fas fa-redo"></i></a> </h4>
               
        </div>
        <div class="potency-list">
                
                {{#each result.potency.options as |p index|}}
                <div class="potency-option" style="
                {{#unless p.canAllocate}}opacity:0.5;{{/unless}} 
                {{#if p.allocation}}color: var(--color-imperium);{{/if}}">
                        <button data-index="{{index}}" data-action="addPotency" {{#unless p.canAllocate}}disabled{{/unless}}>+</button>{{#if p.single}}*{{/if}}[{{p.cost}}] {{p.description}} {{#if p.allocation}}({{p.allocation}}){{/if}}
                </div>
                {{/each}}
        </div>
        {{/if}}
        {{/if}}
</div>

{{> systems/wrath-and-glory/templates/chat/roll/base/base-buttons.hbs}}
{{#if result.isWrathComplication}}
<div class="wrapper">
        <button type="button" data-action="rollWrath">{{localize "TABLE.PERILS_OF_THE_WARP"}}</button>
</div>
{{/if}}