        {{> systems/wrath-and-glory/templates/chat/roll/base/base-result.hbs}}

        {{#if result.range}}
        <p><strong>{{localize "WEAPON.RANGE"}}: {{configLookup "ranges" result.range }}</strong></p>
        {{/if}}

        {{#if result.aim}}
        <p><strong>{{localize "WEAPON.AIMED"}}</strong></p>
        {{/if}}

        {{#if result.calledShot.size}}
                <p><strong>{{localize "WEAPON.CALLED_SHOT"}}: </strong> 
                {{#if result.calledShot.label}}
                {{result.calledShot.label}} ({{configLookup "size" result.calledShot.size}})
                {{else}}
                {{configLookup "size" result.calledShot.size}}
                {{/if}}
                </p>
        {{/if}}


        {{#if result.isWrathCritical}}
        <p><strong class="red">{{localize "CHAT.WRATH_CRITICAL_TITLE"}}</strong><strong>:
                {{localize "CHAT.WRATH_CRITICAL_WEAPON"}}</strong></p>
        {{/if}}

        {{#if result.isWrathComplication}}
        <p><strong class="red">{{localize "CHAT.WRATH_COMPLICATION_TITLE"}}</strong><strong>:
                {{localize "CHAT.WRATH_COMPLICATION_WEAPON"}}</strong></p>
        {{/if}}

        
